<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1080" height="1920"/>
		<author>TeamWin & Reza Adi</author>
		<title>PitchBlack Recovery Project</title>
		<description>splash screen</description>
		<themeversion>3</themeversion>
	</details>

	<resources>
		<font name="font_l" filename="pb.ttf" size="52"/>
		<image name="splashlogo" filename="splashlogo" retainaspect="1"/>
		<image name="splashteamwin" filename="splashteamwin" retainaspect="1"/>
	</resources>

	<variables>
		<variable name="screen_width" value="1080"/>
		<variable name="screen_height" value="1920"/>
		<variable name="background_color" value="#FFFFFF"/>
		<variable name="header_color" value="#00000000"/>
		<variable name="accent_color" value="#00000000"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background_color2%"/>

			<fill color="%front_color%">
				<placement x="3" y="3" w="1074" h="1914"/>
			</fill>
            
			<image>
				<image resource="splashteamwin"/>
				<placement x="540" y="960" placement="4"/>
			</image>
			
		</page>
	</pages>
</recovery>

